@using System.Globalization;

@model List<PrevisaoClima>

<h2 class="titulo-previsao-semanal">Clima para os próximos 7 dias na cidade de @ViewBag.Cidade</h2>
<br>

<div class="container">
    <div class="row previsao-semanal justify-content-around">
        @foreach (var previsao in Model)
        {
            <div class="col-md-1 box-cidades-previsoes">
                <div class="row header-cidades-previsoes">
                    @{ string dia = previsao.DataPrevisao.ToString("dddd", new CultureInfo("pt-BR"));
                       string diaFormatado = Char.ToUpper(dia[0]) + dia.Substring(1);
                       @diaFormatado
                     }  
                </div>
                <div class="container espacamento-cidades-previsoes">
                    <div class="row">
                        @{
                            switch (previsao.Clima)
                            {
                                case "Nublado":
                                    <span class="glyphicon glyphicon-cloud"></span>
                                    <span class="nome-previsao">Nublado</span>
                                    break;
                                case "Chuvoso":
                                    <span class="glyphicon glyphicon-tint"></span>
                                    <span class="nome-previsao">Chuvoso</span>
                                    break;
                                case "Ensolarado":
                                    <span class="glyphicon glyphicon-certificate"></span>
                                    <span class="nome-previsao">Ensolarado</span>
                                    break;
                            }
                        }
                    </div>
                    <div class="row">
                        Mínima: @previsao.TemperaturaMinima°C
                    </div>
                    <div class="row">
                        Máxima: @previsao.TemperaturaMaxima°C
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<br>